---
/**
 * Props:
 * @param {string} color - The hex color code for theme/status bar (e.g. "#007aff")
 */
const { color } = Astro.props;
const sanitizedColor = color || "#ffffff"; // fallback color
---

<!-- Theme color for mobile browsers -->
<meta name="theme-color" content={sanitizedColor} />

<!-- iOS web app capable -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="mobile-web-app-capable" content="yes" />

<!-- iOS status bar style -->
<meta
  name="apple-mobile-web-app-status-bar-style"
  content="black-translucent"
/>

<!-- Windows Phone tile color -->
<meta name="msapplication-TileColor" content={sanitizedColor} />
<meta name="msapplication-navbutton-color" content={sanitizedColor} />

<!-- Viewport for responsive scaling -->
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- Disable automatic detection of phone numbers on iOS -->
<meta name="format-detection" content="telephone=no" />
